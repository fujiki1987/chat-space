.side_bar
  .user_name
    .top_items
      .name
        = current_user.name
      .icons
        .icon_edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        .icon_cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .group_list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group_name
            = group.name
          .message
